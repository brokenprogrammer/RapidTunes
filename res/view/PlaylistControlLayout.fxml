<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="150.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.oskarmendel.view.PlaylistController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Main Menu" textAlignment="CENTER" />
      <RadioButton contentDisplay="CENTER" mnemonicParsing="false" text="Explore" />
      <Separator prefHeight="0.0" prefWidth="150.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Separator>
      <Label text="Your Music" />
      <RadioButton mnemonicParsing="false" text="Songs" />
      <RadioButton mnemonicParsing="false" text="Playlists" />
      <Separator prefHeight="0.0" prefWidth="150.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Separator>
      <Label text="Playlists" />
      <Button fx:id="playlistNew" mnemonicParsing="false" text="New Playlist" />
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <ImageView fx:id="playlistImg" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER" />
            <Label fx:id="playlistSong" text="Song Name" />
            <Label fx:id="playlistArtist" text="Artist Name" />
         </children>
      </VBox>
   </children>
</VBox>
