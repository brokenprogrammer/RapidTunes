<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.input.KeyCodeCombination?>
<MenuBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="me.oskarmendel.view.MenuBarController"
         maxWidth="Infinity">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem id="navFileNewPlaylist" text="New playlist">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navFileImportPlaylist" text="Import playlist">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navFileExit" mnemonicParsing="false" text="Exit" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem id="navEditUndo" text="Undo">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditRedo" text="Redo">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="Y" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditCut" text="Cut">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditCopy" text="Copy">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditPaste" text="Paste">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="V" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditDelete" text="Delete">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="DELETE" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditMarkAll" text="Mark all">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditSearch" text="Search">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navEditSettings" text="Settings">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="View" />
        <Menu mnemonicParsing="false" text="Playback">
            <items>
                <MenuItem id="navPlaybackPlay" mnemonicParsing="false" text="Play" />
                <MenuItem id="navPlaybackNext" text="Next">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="RIGHT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackPrevious" text="Previous">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="LEFT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>
                <MenuItem id="navPlaybackFastForward" text="Fast forward">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="RIGHT" control="UP" meta="UP" shift="DOWN" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackRewind" text="Rewind">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="LEFT" control="UP" meta="UP" shift="DOWN" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackShuffle" text="Shuffle">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackRepeat" text="Repeat">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackVolumeUp" text="Volume up">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackVolumeDown" text="Volume down">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="DOWN" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navPlaybackOpenQueue" mnemonicParsing="false" text="Open queue" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem id="navHelpRapidTunesHelp" text="RapidTunes help">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="F1" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
                <MenuItem id="navHelpAboutRapidTunes" mnemonicParsing="false" text="About RapidTunes" />
            </items>
        </Menu>
    </menus>
</MenuBar>
